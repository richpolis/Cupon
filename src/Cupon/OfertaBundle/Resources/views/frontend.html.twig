{# app/Resources/views/frontend.html.twig #}
{% extends '::base.html.twig' %}
 
{% block stylesheets %}
    <link href="{{ asset('bundles/oferta/css/normalizar.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('bundles/oferta/css/comun.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('bundles/oferta/css/frontend.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block javascripts %}{% endblock %}
 
{# app/Resources/views/frontend.html.twig #}
{% set ciudadSeleccionada = app.request.attributes.get('ciudad', ciudad_por_defecto) %} 

{% block body %}
<header>
    <h1><a href="{{ path('portada',{'ciudad':ciudadSeleccionada}) }}">CUPON</a></h1>
    <nav>
        <ul>
            <li>
                <a href="{{ path('portada',{'ciudad':ciudadSeleccionada}) }}">
                    {{ 'menu.dia' | trans }}
                </a>
            </li>
            <li>
                <a href="{{ path('ciudad_recientes',{'ciudad':ciudadSeleccionada}) }}">
                    {{ 'menu.recientes' | trans }}
                </a>
            </li>
            <li>
                <a href="{{ path('usuario_compras') }}">
                    {{ 'menu.mias' | trans }}
                </a>
            </li>
            <li>{{ render(controller('CiudadBundle:Default:listaCiudades', { 'ciudad': ciudadSeleccionada })) }}</li>
        </ul>
    </nav>
</header>
 
<article>
    {% block article %}{% endblock %}
</article>
 
<aside>
    {% block aside %}
         <section id="login">
            {{ render(controller('UsuarioBundle:Default:cajaLogin')) }}
        </section>
 
        <section id="nosotros">
            <h2>Sobre nosotros</h2>
            <p>Lorem ipsum dolor sit amet...</p>
        </section>
    {% endblock %}
</aside>
{% endblock %}